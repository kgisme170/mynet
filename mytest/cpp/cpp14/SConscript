#1. Env setttings
import os
env=Environment(ENV=os.environ)
env.Append(CXXFLAGS="--std=c++14")
#2. Targets
env.Program(target='atomics', source='atomics.cpp', LIBS = ['atomic', 'pthread'])
env.Program(target='autoReturn', source='autoReturn.cpp')
env.Program(target='bindImpl', source='bindImpl.cpp')
env.Program(target='decltypeAuto', source='decltypeAuto.cpp')
env.Program(target='decltype_auto', source='decltype_auto.cpp')
env.Program(target='indexSequence', source='indexSequence.cpp')
env.Program(target='makeSequence', source='makeSequence.cpp')
env.Program(target='newLambda', source='newLambda.cpp')
env.Program(target='pv', source='pv.cpp')
env.Program(target='template_auto', source='template_auto.cpp')
env.Program(target='testStdThread', source='testStdThread.cpp', LIBS = 'pthread')
env.Program(target='threadFuture', source='threadFuture.cpp', LIBS = 'pthread')
env.Program(target='traits', source='traits.cpp')
env.Program(target='usepackagedtask', source='usepackagedtask.cpp', LIBS = 'pthread')
env.Program(target='usepromise', source='usepromise.cpp', LIBS = 'pthread')
env.Program(target='userDefinedLiteral', source='userDefinedLiteral.cpp')
