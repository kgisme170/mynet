#!/usr/bin/env python
Import('env')
env = env.Clone()
import os,sys
env.Append(CXXFLAGS = ['-I.'])
info = env.StaticLibrary(target='info',source=['common/info.cpp','info.cpp'], CPPPATH=[])
env['INFO'] = info

env.SharedLibrary(
    target = 'mylib',
    source = ['mylib.cpp'],
    LIBPATH = ['.'],
    LIBS = ['info']) # doesn' take effect when not used

env.SConscript(dirs=['common'], exports=['env'])
